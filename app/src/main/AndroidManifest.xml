<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.examensarbete">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExamensArbete.NoActionBar">
        <activity android:name=".Screens.EndGameScreen"></activity>
        <activity
            android:name=".Screens.SplashScreen"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screens.GameActivity" />
        <activity android:name=".Screens.PlayerProfile" />
        <activity android:name=".Screens.ForgotPassword" />
        <activity android:name=".Screens.Categories" />
        <activity android:name=".Screens.SignUp" />
        <activity
            android:name=".Screens.LogIn"
            android:theme="@style/Theme.ExamensArbete.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ExamensArbete.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>